<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Hardware Features -->
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-feature android:name="android.hardware.location.gps" android:required="false" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EVChargingMobile"
        tools:targetApi="31">

        <!-- Google Maps API Key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <!-- Activities -->
        <activity
            android:name=".ui.auth.AuthActivity"
            android:exported="true"
            android:theme="@style/Theme.EVChargingMobile">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.auth.RegisterActivity"
            android:exported="false"
            android:parentActivityName=".ui.auth.AuthActivity" />

        <activity
            android:name=".ui.dashboard.OwnerDashboardActivity"
            android:exported="false" />

        <activity
            android:name=".ui.dashboard.OperatorHomeActivity"
            android:exported="false" />

        <activity
            android:name=".ui.owners.OwnerProfileActivity"
            android:exported="false" />

        <activity
            android:name=".ui.bookings.BookingListActivity"
            android:exported="false" />

        <activity
            android:name=".ui.bookings.BookingFormActivity"
            android:exported="false" />

        <activity
            android:name=".ui.bookings.BookingDetailActivity"
            android:exported="false" />

        <activity
            android:name=".ui.stations.StationMapActivity"
            android:exported="false" />

        <activity
            android:name=".ui.qr.QrCodeActivity"
            android:exported="false" />

        <activity
            android:name=".ui.qr.QrScanActivity"
            android:exported="false" />

    </application>

</manifest>
